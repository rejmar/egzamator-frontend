{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true, "tsx": true },
    "allowImportExportEverywhere": true
  },
  "settings": {
    "react": {
      "version": "16.8.6"
    }
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "prettier/react",
    "plugin:react/recommended"
  ],
  "env": { "node": true, "browser": true, "jest": true, "es6": true },
  "rules": { "no-console": "off" }
}
